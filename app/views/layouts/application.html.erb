<body>
  <div class="container">
    <p id="notice"><%= notice %></p>
      <% if current_user %>
        Signed in as <strong><%= current_user.name %></strong>!
        <%= link_to "Your Settings", "", class:"settings_button" %> | 
        <%= link_to "Sign out", signout_path, id: "sign_out" %>
        <div class= "edit_number_form">
        <h4>You can update your number here if you need to: </h4> 
          <%= form_for @user do |f| %>
            <%= f.label :phone_number %><br>
            <%= f.telephone_field :phone_number, placeholder: "+12128888888" %>
            <%= f.submit %>
          <% end %>
        </div>
      <% else %>
        <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
      <% end %>
  
    <%= yield %>
  </div>

  <%= javascript_include_tag 'application' %>
</body>
