<h1>Add Friends You Want To Be Reminded To Keep in Touch With</h1>

<% if logged_in? %>

	<% @user.friends.select(:id, :name, :phone_number).distinct.order(:name).each do |friend| %>
		<p><%= friend.name %>

		<%= form_for friend do |f| %>
		<%= f.hidden_field :is_close?, :value=> true %>
		<%= f.submit "Add to close friends" %>
		<% end %>
		</p>


	<% end %>			
<% end %>