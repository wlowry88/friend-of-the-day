<h1>Mnemonic</h1>
  <% if logged_in? %>
    <% 5.times do %>
      <% random_friend = @friends.sample %>
      <h3>Have you reached out to <%= random_friend.name %> lately?</h3>
      <p>Phone number: <%= random_friend.phone_number%></p>
      <% if random_friend.email != "Not provided" %>
      <p>Email: <%= mail_to "#{random_friend.email}" %></p>
      <% end %>
    <% end %> 
  <h2>To get reminders via text enter your phone number here </h2>


  <%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this act from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
  
    <p>
        <%= f.label :phone_number %><br>
        <%= f.telephone_field :phone_number, placeholder: "+12128888888" %>
      <%= f.submit %>
    </p>
  </div>  
<% end %>

  <% end %>
