<% if @user.friends.where(close_friend: true).size > 0 %>
	<h1><%= "People You're Keeping in Touch With:" %></h1>
		<% @user.friends.select(:id, :name).where(close_friend: true).each do |friend| %>
			<p><%= friend.name %>
				<%= form_for friend do |f| %>
					<%= f.hidden_field :close_friend, :value=> false %>
					<%= f.submit "Remove from Close Friends" %></p>
				<% end %>
		<% end %>
<% end %>

	 
<h1>Add Friends You Want To Be Reminded To Keep in Touch With</h1>
<% if logged_in? %>

<div class = "container">
<p>Or, Add a New Friend:
	<%= form_for(@friend) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :phone_number %>
		<%= f.phone_field :phone_number %>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= f.hidden_field :user_id, :value => @user.id %>	
		<%= f.submit %></p>
	<% end %>
</div>
	<% @user.friends.where(close_friend: false).order(:name).each do |friend| %>
		<p>
		<h5><%= friend.name %></h5>
			<!--Form for Adding to Close Friends -->
			<%= form_for friend do |f| %>
			<%= f.hidden_field :close_friend, :value=> true %>
			<%= f.submit "Add to close friends" %>
			<% end %>
			<!-- end form -->
			<%= link_to 'Edit', edit_friend_path(friend) %> | 
			<%= link_to 'Remove', friend, method: :delete, data: { confirm: 'Are you sure you want to delete this friend??' } %>
		</p>
	<% end %>			
<% end %>